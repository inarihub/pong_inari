<Window x:Name="StartScreen" x:Class="pong_inari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pong_inari"
        mc:Ignorable="d"
        Title="Pong by Inari" Height="300" Width="500" ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen" Cursor="{DynamicResource GameCursor}" MouseDown="StartScreen_MouseDown" KeyDown="KeyDownHandler" Closed="StartScreen_Closed">
    <Grid x:Name="StartScreenGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/resources/images/startscreen.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
